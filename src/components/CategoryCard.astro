---
import type { PostType } from "../utils/posts";

interface Props {
  title: string;
  description: string;
  icon: string;
  posts: PostType[];
  collection: string;
  colorClass: string;
  hoverShadowClass: string;
  borderClass: string;
  linkColorClass: string;
  hoverLinkColorClass: string;
}

const {
  title,
  description,
  icon,
  posts,
  collection,
  colorClass,
  hoverShadowClass,
  borderClass,
  linkColorClass,
  hoverLinkColorClass,
} = Astro.props;
---

<div
  class={`group bg-white dark:bg-gray-800/70 backdrop-blur-sm p-6 rounded-xl border border-gray-200 dark:border-gray-600 shadow-lg hover:shadow-xl dark:hover:shadow-2xl ${hoverShadowClass} transition-all duration-300 hover:-translate-y-1 border-l-4 ${borderClass}`}
>
  <div class="space-y-4">
    <h3
      class={`text-xl font-bold text-gray-900 dark:text-white ${colorClass} transition-colors duration-200`}
    >
      {icon}
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-200 text-sm leading-relaxed">
      {description}
    </p>
    <ul class="space-y-2">
      {
        posts.map((post: PostType) => (
          <li>
            <a
              href={`/${collection}/${post.id}`}
              class={`inline-flex items-center text-sm ${linkColorClass} ${hoverLinkColorClass} transition-colors duration-200 hover:underline`}
            >
              <svg
                class="w-3 h-3 mr-2 flex-shrink-0"
                width="12"
                height="12"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"
                />
              </svg>
              {post.data.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
